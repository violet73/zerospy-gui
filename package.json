{
	"name": "zerospy-gui",
	"displayName": "ZeroSpy-GUI",
	"description": "gui for ZeroSpy",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:programCct"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "cct-explorer",
					"title": "CCT Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"cct-explorer": [
				{
					"id": "programCct",
					"name": "Program CCT",
					"icon": "media/dep.svg",
					"contextualTitle": "CCT Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "programCct.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "programCct.openFile",
				"title": "Location"
			},
			{
				"command": "genReport.generateReport",
				"title": "Report"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "programCct.refreshEntry",
					"when": "view == programCct",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "programCct.openFile",
					"when": "view == programCct && viewItem == dependency",
					"group": "inline"
				}
			],
			"editor/context": [
				{
				  "command": "genReport.generateReport",
				  "group": "mygroup@1",
				  "when": "editorTextFocus && resourceExtname == .json"
				}
			  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.56.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
